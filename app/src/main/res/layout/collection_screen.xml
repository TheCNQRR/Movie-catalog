<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/collections_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:text="@string/collections"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/add_icon"
        app:tint="@color/white" />

    <ListView
        android:id="@+id/collections_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/collections_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="@color/bottom_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/collection_screen_tv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        app:tint="@color/gray"
        app:srcCompat="@drawable/bottom_panel_tv" />

    <TextView
        android:id="@+id/main_text_in_collection_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/main"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/collection_screen_tv"
        app:layout_constraintStart_toStartOf="@+id/collection_screen_tv"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/collection_screen_star"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_panel_star"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        app:tint="@color/accent" />

    <TextView
        android:id="@+id/star_text_in_collection_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="@string/collections"
        android:textColor="@color/accent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/collection_screen_star"
        app:layout_constraintStart_toStartOf="@+id/collection_screen_star" />

    <ImageView
        android:id="@+id/collection_screen_profile"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bottom_panel_profile"
        app:tint="@color/gray" />

    <TextView
        android:id="@+id/profile_text_in_collection_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="@string/profile"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/collection_screen_profile"
        app:layout_constraintStart_toStartOf="@+id/collection_screen_profile" />


</androidx.constraintlayout.widget.ConstraintLayout>