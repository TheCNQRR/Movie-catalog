<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/toolbar_back"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/collections_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/create_collection"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="41dp"
        android:layout_marginStart="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/collection_name"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/authorization_border"
        android:ems="10"
        android:fontFamily="@font/ibm_plex_sans_regular"
        android:hint="@string/collection_name"
        android:inputType="textVisiblePassword"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingTop="11dp"
        android:paddingEnd="11dp"
        android:paddingBottom="13dp"
        android:textColor="@color/accent"
        android:textColorHint="@color/collection_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/collection_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="159dp"
        android:background="@drawable/favorite_collection_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/choose_icon"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="175dp"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/authorization_button_border"
        android:clickable="true"
        android:fontFamily="@font/ibm_plex_sans_bold"
        android:gravity="center"
        android:padding="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/choose_icon"
        android:textColor="@color/accent"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/accent_shape_background"
        android:clickable="true"
        android:fontFamily="@font/ibm_plex_sans_bold"
        android:gravity="center"
        android:padding="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>