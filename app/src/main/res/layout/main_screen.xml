<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="false"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".ui.MainScreenActivity">

    <ScrollView
        android:id="@+id/scroll_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingBottom="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_width="0dp"
                android:layout_height="320dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/register_in_the_app"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="244dp"
                android:layout_marginEnd="92dp"
                android:background="@drawable/accent_shape_background"
                android:clickable="true"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:gravity="center"
                android:padding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/watch"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/favorites_text_in_main"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="352dp"
                android:gravity="center_vertical"
                android:text="@string/favourite"
                android:textColor="@color/accent"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_for_movies"
                android:layout_width="0dp"
                android:layout_height="172dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/favorites_text_in_main">

                <LinearLayout
                    android:id="@+id/movies_container"
                    android:layout_width="0dp"
                    android:layout_height="144dp"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <TextView
                android:id="@+id/gallery"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="@string/gallery"
                android:textColor="@color/accent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_for_movies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gallery_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gallery" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="@color/bottom_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/main_screen_tv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        app:tint="@color/accent"
        app:srcCompat="@drawable/bottom_panel_tv" />

    <TextView
        android:id="@+id/main_text_in_main_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="@string/main"
        android:textColor="@color/accent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_screen_tv"
        app:layout_constraintStart_toStartOf="@+id/main_screen_tv"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/main_screen_star"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_panel_star"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="168dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/star_text_in_main_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="@string/collections"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/main_screen_star"
        app:layout_constraintStart_toStartOf="@+id/main_screen_star" />

    <ImageView
        android:id="@+id/main_screen_profile"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bottom_panel_profile"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/profile_text_in_main_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:text="@string/profile"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/main_screen_profile"
        app:layout_constraintStart_toStartOf="@+id/main_screen_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>
