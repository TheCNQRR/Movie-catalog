<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MovieCatalogApplication"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalog"
        tools:targetApi="31">
        <activity
            android:name=".ui.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieCatalog.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.SignInActivity"
            android:exported="false" />

        <activity
            android:name=".ui.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".ui.MainScreenActivity"
            android:exported="false" />

        <activity
            android:name=".ui.MovieScreenActivity"
            android:exported="false" />

        <activity
            android:name=".ui.ProfileScreenActivity"
            android:exported="false" />

        <activity
            android:name=".ui.CollectionScreenActivity"
            android:exported="false" />

        <activity
            android:name=".ui.CreateCollectionActivity"
            android:exported="false" />

        <activity
            android:name=".ui.ChangeCollectionActivity"
            android:exported="false" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>